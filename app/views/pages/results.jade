extends ../layout

block content
	.container
		.row
			.panel.panel-default
				.panel-heading
					h3 #{keyword}
				.panel-body
					if movies && movies.length > 0
						each item in movies
							.col-md-2
								.thumbnail
									a(href="/movie/#{item._id}")
										img(src="#{item.poster}", alt="#{item.title}")
									.caption
										h3 #{item.title}
										p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告片
			ul.pagination
				//- 使用 － 开头可以在jade 使用js代码。注入模版中 的变量，在js中作为正常变量 引用
				- for(var i = 0; i < total_pages; i++)
					//- 应用 js 定义变量用 #{}
					if(cerrent_page == (i + 1))
						li.active
							span #{i + 1}
					else
						li
							a(href="/results?cat=" + catId + "&p=" + i) 
								span #{i + 1}